            },
            "description": "Items per page"
          },
          {
            "in": "query",
            "name": "airport_ids",
            "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "example": "IN106"
              }
            },
            "description": "sort by airport ids"
          },
          {
            "in": "query",
            "name": "aircraft_ids",
            "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "example": 1001
              }
            },
            "description": "Sort by aircraft ids"
          },
          {
            "in": "query",
            "name": "transaction_types",
            "schema": {
              "type": "string",
              "enum": [
                "in",
                "out"
              ]
            },
            "description": "Filter by transaction type"
          },
          {
            "in": "query",
            "name": "sort_by",
            "schema": {
              "type": "string",
              "enum": [
                "DATE_HIGH_LOW",
                "DATE_LOW_HIGH",
                "QUANTITY_LOW_HIGH",
                "QUANTITY_HIGH_LOW"
              ]
            },
            "description": "Sorting type"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
